@model AuctionWebsiteV2.Models.BidViewModel

@{
    ViewBag.Title = "Bid";
}

<h2>Bid</h2>
<h4>Current Item</h4>
<p>@Model.Item.Name</p>
<p>@Model.Item.CurrentBid</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Bid</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Bid.Id)
        @Html.HiddenFor(model => model.Item.Name)
        @Html.HiddenFor(model => model.Item.Description)
        @Html.HiddenFor(model => model.Item.Condition)
        @Html.HiddenFor(model => model.Item.CurrentBid)

        <div class="form-group">
            @Html.LabelFor(model => model.Bid.BidderName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bid.BidderName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bid.BidderName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bid.BidAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bid.BidAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bid.BidAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bid!!!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
